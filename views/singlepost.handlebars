<div class="card single-post-padding">
    <h1 id="post-title" class="post-header">{{post.title}} </h1>
    <h4>Posted by {{post.user.username}}</h4>
    <div class="container">
        <p id="post-body" class="post-text post-text-padding">{{post.body}}</p>
    </div>
    
    {{#if currentUser}}
    <button class="edit-btn" id="edit-btn">Edit</button>
    <button class="edit-btn" id="delete-btn">Delete</button>
    {{/if}}
</div>
{{!-- Add Comment --}}
<div class="padding-20">
    <form id="comment-form " class="padding-20">
        <label for="comment-text">Leave A Comment</label>
        <input class="padding-20" type="textarea" name="comment-text" id="comment-text">
        <button class="postbtn" id="post-comment-btn">Post!</button>
    </form>
</div>
{{!-- All comments --}}
{{#each post.comments as |aComment|}}
{{> comment aComment}}
{{/each}}

<script src="/js/singlepost.js"></script>
{{#if currentUser}}
<script src="/js/editpost.js"> </script>
{{/if}}